			<arg value="--write-only" />
			<classpath>
				<pathelement path="${bin}" />
			</classpath>
		</java>
	</target>

	<!-- Limpeza. -->
	<target name="clean" description="Limpa o projeto, deixando apenas o
código-fonte.">
		<delete dir="${bin}" />
		<delete dir="${doc}" />
		<delete>
			<fileset dir="." includes="*.txt" />
		</delete>
		<delete>
			<fileset dir="." includes="*.csv" />
		</delete>
